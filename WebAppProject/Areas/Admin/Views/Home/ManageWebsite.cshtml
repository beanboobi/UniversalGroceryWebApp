@{
    ViewData["Title"] = "Manage Web Site";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Manage Website</h2>
<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="bannerPicture">Banner Picture 1</label>
            <input type="file" class="form-control-file" id="bannerPicture" name="Website Banner Picture" />
        </div>
        <div class="form-group">
            <label for="bannerPicture">Banner Picture 2</label>
            <input type="file" class="form-control-file" id="bannerPicture" name="Website Banner Picture" />
        </div>
        <div class="form-group">
            <label for="bannerPicture">Banner Picture 3</label>
            <input type="file" class="form-control-file" id="bannerPicture" name="Website Banner Picture" />
        </div>
        <div class="form-group text-center">
            <button type="button" class="btn btn-danger">Delete</button>
            <button type="button" class="btn btn-secondary">Cancel</button>
            <button type="submit" class="btn btn-success">Save</button>
        </div>
    </form>
</div>

