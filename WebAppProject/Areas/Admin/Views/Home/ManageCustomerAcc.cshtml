@model IEnumerable<WebAppProject.ViewModels.UsersViewModel>

@{
    ViewData["Title"] = "Manage Customer Accounts";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h2>Manage Customer Accounts</h2>
    <div class="row mb-3">
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search customers..." id="searchBox">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="button" onclick="searchCustomers()">
                        <img src="~/images/search.png" alt="Search" style="width:20px;">
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email Address</th>
                    <th>Role</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="customersTableBody">
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.Username</td>
                        <td>@customer.Email</td>
                        <td>@customer.Role</td>
                        <td>
                            <a asp-area="Admin" asp-controller="Home" asp-action="EditCustomer" asp-route-id="@customer.Id" class="btn btn-sm btn-warning">
                                Edit
                            </a>
                            <form asp-area="Admin" asp-controller="Home" asp-action="DeleteCustomer" asp-route-id="@customer.Id" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this customer?');">
                                    Remove
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        function searchCustomers() {
            var searchBox = document.getElementById('searchBox');
            var filter = searchBox.value.toLowerCase();
            var rows = document.querySelectorAll('#customersTableBody tr');

            rows.forEach(function (row) {
                var customerName = row.cells[0].textContent.toLowerCase();
                if (customerName.includes(filter)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }
    </script>
}
