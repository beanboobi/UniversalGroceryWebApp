@using WebAppProject
@using WebAppProject.Models
@using WebAppProject.ViewModels
@using Microsoft.AspNetCore.Identity
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Your Application</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebAppProject.styles.css" asp-append-version="true" />
    <style>
        .admin-profile {
            display: flex;
            align-items: center;
            justify-content: flex-end;
            margin-left: 200px; /* Adjust this value as needed to move it further to the right */
        }

        .greeting {
            margin-right: 10px;
            text-align: right;
        }

        .admin-image {
            width: 40px;
            height: 40px;
            border-radius: 50%;
        }

        .navbar {
            padding-right: 30px;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-right">
                <div class="admin-profile">
                    <span class="greeting">Hello, @User.Identity.Name<br /><small>Have a nice day</small></span>
                    <img src="~/images/admin1.png" alt="Admin" class="admin-image" />
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="row">
            <div class="col-md-3">
                @Html.Partial("_Sidebar")
            </div>
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
