@model IEnumerable<WebAppProject.Models.GroceryItem>

@{
    ViewData["Title"] = "Manage Items";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h2>Manage Items</h2>
    <div class="row mb-3">
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search items..." id="searchBox">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="button" onclick="searchItems()">
                        <img src="~/images/search.png" alt="Search" style="width:20px;">
                    </button>
                </div>
            </div>
        </div>
        <div class="col-md-6 text-right">
            <a href="@Url.Action("AddProduct", "Home", new { area = "Admin" })" class="btn btn-primary">Add Item</a>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Picture</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Qty</th>
                    <th>Discount</th>
                    <th>Category</th>
                    <th>Created Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="itemsTableBody">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <img src="@item.ImageUrl" alt="@item.Name" style="width:50px;" onerror="this.src='/images/placeholder.png';" loading="lazy" />
                        </td>
                        <td>@item.Description</td>
                        <td>@item.Price</td>
                        <td>@item.Quantity</td>
                        <td>@item.Discount %</td>
                        <td>@item.Category</td>
                        <td>@item.CreatedDate</td>
                        <td>
                            <a href="@Url.Action("Edit", "ManageItem", new { id = item.Id, area = "Admin" })" class="btn btn-sm btn-warning">
                                Edit
                            </a>
                            <form asp-action="DeleteItem" asp-route-id="@item.Id" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">
                                    Remove
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        function searchItems() {
            var searchBox = document.getElementById('searchBox');
            var filter = searchBox.value.toLowerCase();
            var rows = document.querySelectorAll('#itemsTableBody tr');

            rows.forEach(function (row) {
                var itemName = row.querySelector('td:nth-child(2)').textContent.toLowerCase();
                if (itemName.indexOf(filter) > -1) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }
    </script>
}

<style>
    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            font-weight: bold;
        }

        .form-group input,
        .form-group select {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        .form-group img {
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .form-group button {
            margin: 5px;
            width: 100px;
        }
</style>