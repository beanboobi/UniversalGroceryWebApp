@model List<WebAppProject.ViewModels.OrderViewModel>

@{
    ViewData["Title"] = "My Order History";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order History</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f4f4;
            padding-top: 20px;
        }

        .container {
            background-color: white;
            box-shadow: 0 2px 15px rgba(0,0,0,0.1);
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
        }

        h2 {
            color: #333;
            border-bottom: 2px solid #efefef;
            padding-bottom: 10px;
        }

        .list-group-item {
            border: none;
            border-radius: 5px;
            margin-top: 8px;
            transition: all 0.3s ease;
        }

            .list-group-item:hover {
                background-color: #f8f8f8;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            }

        .list-group-item-action {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .list-group-item small {
            font-weight: 600;
            color: #666;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2>My Order History</h2>
        <div class="list-group">
            @foreach (var order in Model)
            {
                <a asp-action="OrderDetails" asp-route-id="@order.OrderId" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">Order ID: @order.OrderId - @order.OrderDate.ToShortDateString()</h5>
                        <small>Total items: @order.TotalItems</small>
                    </div>
                    <p class="mb-1">Total Price: @order.TotalPrice.ToString("C")</p>
                    <small>Date: @order.OrderDate.ToShortDateString()</small>
                </a>
            }
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

