<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: white;
        }

        h2 {
            color: #343a40;
        }

        table th, table td {
            vertical-align: middle;
        }

        .order-summary {
            background-color: white;
            padding: 20px;
            border: 1px solid #dee2e6;
            border-radius: 5px;
        }

            .order-summary h4 {
                border-bottom: 1px solid #dee2e6;
                padding-bottom: 10px;
                margin-bottom: 20px;
            }

        .btn-checkout {
            background-color: #28a745;
            border-color: #28a745;
        }

            .btn-checkout:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }

        .table-borderless th, .table-borderless td {
            border: 0;
        }

        .promo-code {
            color: #007bff;
            cursor: pointer;
        }

            .promo-code:hover {
                text-decoration: underline;
            }

        .product-img {
            width: 50px;
            height: auto;
        }

        .quantity-input {
            width: 60px;
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <div class="row">
            <div class="col-md-8">
                <h2 class="my-4">My Cart</h2>

                <table class="table">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Unit Price</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><img src="https://via.placeholder.com/50" class="product-img" alt="Meiji milk 750ml"> Meiji milk 750ml</td>
                            <td><input type="number" class="form-control quantity-input" value="4" data-price="10.00"></td>
                            <td>$10.00</td>
                            <td class="item-total">$40.00</td>
                        </tr>
                        <tr>
                            <td><img src="https://via.placeholder.com/50" class="product-img" alt="Cocacola"> Cocacola</td>
                            <td><input type="number" class="form-control quantity-input" value="2" data-price="10.00"></td>
                            <td>$10.00</td>
                            <td class="item-total">$20.00</td>
                        </tr>
                        <tr>
                            <td><img src="https://via.placeholder.com/50" class="product-img" alt="Ice-cream"> Ice-cream</td>
                            <td><input type="number" class="form-control quantity-input" value="3" data-price="10.00"></td>
                            <td>$10.00</td>
                            <td class="item-total">$30.00</td>
                        </tr>
                        <tr>
                            <td><img src="https://via.placeholder.com/50" class="product-img" alt="Blueberry"> Blueberry</td>
                            <td><input type="number" class="form-control quantity-input" value="6" data-price="10.00"></td>
                            <td>$10.00</td>
                            <td class="item-total">$60.00</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="col-md-4">
                <div class="order-summary">
                    <h4>Order Summary</h4>
                    <table class="table table-borderless">
                        <tr>
                            <th>Subtotal:</th>
                            <td id="subtotal">$150.00</td>
                        </tr>
                        <tr>
                            <th>Shipping:</th>
                            <td id="shipping">$6.00</td>
                        </tr>
                        <tr>
                            <th>Tax:</th>
                            <td id="tax">$3.00</td>
                        </tr>
                        <tr>
                            <td colspan="2"><span class="promo-code">+ Enter a promo code</span></td>
                        </tr>
                        <tr>
                            <th>Total:</th>
                            <td id="total">$159.00</td>
                        </tr>
                    </table>
                    <a href="/Home/CheckOut" class="btn btn-checkout btn-block">Proceed To Checkout</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        function calculateTotals() {
            let subtotal = 0;
            document.querySelectorAll('.quantity-input').forEach(function (input) {
                const price = parseFloat(input.getAttribute('data-price'));
                const quantity = parseInt(input.value);
                const itemTotal = price * quantity;
                input.closest('tr').querySelector('.item-total').textContent = `$${itemTotal.toFixed(2)}`;
                subtotal += itemTotal;
            });

            const shipping = 6.00;
            const tax = 3.00;
            const total = subtotal + shipping + tax;

            document.getElementById('subtotal').textContent = `$${subtotal.toFixed(2)}`;
            document.getElementById('total').textContent = `$${total.toFixed(2)}`;
        }

        document.addEventListener('input', function (event) {
            if (event.target.classList.contains('quantity-input')) {
                calculateTotals();
            }
        });

        window.onload = calculateTotals;
    </script>
</body>
</html>
