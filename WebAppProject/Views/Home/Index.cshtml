@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<WebAppProject.ViewModels.GroceryItemViewModel>

<!-- Banner Section Start -->
<div class="banner-section">
    <div class="banner-left">
        <h2>Exclusive offer <span>30% Off</span></h2>
        <p>STAY HOME & DELIVERED YOUR DAILY NEEDS</p>
        <p>Vegetables contain many vitamins and minerals that are good for your health.</p>
        <a href="#" class="shop-now">Shop Now</a>
    </div>
    <div class="banner-right">
        <div class="banner-ad">
            <h2>45% OFF Nut Collection</h2>
            <p>We deliver organic vegetables & fruits</p>
            <a href="#" class="shop-now">Shop Now</a>
        </div>
        <div class="banner-ad">
            <h2>Healthy Food Organic Market</h2>
            <p>Start your daily shopping with some Organic food</p>
            <a href="#" class="shop-now">Shop Now</a>
        </div>
    </div>
</div>
<!-- Banner Section End -->

<div class="homepage">
    <aside class="sidebar">
        <h2>Category</h2>
        <ul>
            <li><a href="#">Vegetables & Fruit</a></li>
            <li><a href="#">Beverages</a></li>
            <li><a href="#">Meats & Seafood</a></li>
            <li><a href="#">Milk & Dairies</a></li>
            <li><a href="#">Frozen Foods</a></li>
            <li><a href="#">Biscuits & Snacks</a></li>
            <li><a href="#">Household</a></li>
            <li><a href="#">Drinks</a></li>
            <li><a href="#">Pet Foods</a></li>
        </ul>
        <ul class="additional-categories">
            <li><a href="#">Value of the Day</a></li>
            <li><a href="#">Top 50 Offers</a></li>
            <li><a href="#">New Arrivals</a></li>
        </ul>
        <div class="sidebar-banner">
            <img src="~/images/banner.png" alt="Sidebar Banner">
        </div>
    </aside>

    <main class="main-content">
        <section class="deal-of-the-day">
            <div class="section-header">
                <h2>Deal of the day</h2>
                <a href="#" class="see-all">See All</a>
            </div>
            <div class="products-grid">
                @foreach (var item in Model)
                {
                    <div class="product-card" data-id="@item.Id">
                        <img src="@item.ImageUrl" alt="@item.Name" onclick="goToProductDetails(this)">
                        <div class="product-info">
                            <h3 onclick="goToProductDetails(this)">@item.Name</h3>
                            <div class="price">
                                <span class="current-price">
                                    $
                                    @item.Price.ToString("F2")
                                </span>
                                <span class="original-price">
                                    $
                                    @item.OriginalPrice.ToString("F2")
                                </span>
                            </div>
                            <button class="btn-add" onclick="addToCart(this)">Add</button>
                        </div>
                    </div>
                }
                
            </div>
        </section>

        <section class="additional-section">
            <h2>Breakfast & Dairy</h2>
            @* Add similar product grid here *@
        </section>
    </main>
</div>

<script>
    function goToProductDetails(element) {
        var productId = element.closest('.product-card').getAttribute('data-id');
        window.location.href = '/Home/ProductDetails/' + productId;
    }
</script>

